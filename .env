# 服务器配置
PORT=4001
HOST=localhost
NODE_ENV=development

# 时区配置
TZ=Asia/Shanghai

# 内存配置 (MB)
MAX_MEMORY_MB=512
MEMORY_WARNING_THRESHOLD=300
MEMORY_CRITICAL_THRESHOLD=450

# 请求配置
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=5mb
MAX_CONCURRENT_REQUESTS=10

# 日志配置
LOG_LEVEL=debug  # debug, info, warn, error, fatal
LOG_CONSOLE=true  # 控制台输出
LOG_FILE=false  # 文件输出
LOG_DIR=./logs  # 日志目录
LOG_FILENAME=app.log  # 日志文件名
ENABLE_LOG_TIMESTAMP=true  # 是否启用时间戳
ENABLE_LOG_MODULE=true  # 是否启用模块名

# 日志性能配置
LOG_BUFFER_SIZE=65536  # 缓冲大小（字节），默认64KB
LOG_FLUSH_INTERVAL=1000  # 刷新间隔（毫秒），默认1秒

# 日志轮转配置
LOG_ROTATION_MAX_SIZE=5242880  # 单个文件最大大小（字节），默认5MB
LOG_ROTATION_MAX_TOTAL_SIZE=10485760  # 日志总大小上限（字节），默认10MB
LOG_ROTATION_CLEANUP_THRESHOLD=5242880  # 清理阈值（字节），默认5MB
LOG_ROTATION_MAX_AGE_DAYS=7  # 最大保留天数，默认7天

# 安全配置
ENABLE_RATE_LIMITING=true
CORS_ORIGIN=*

# Tree-sitter配置
PARSER_POOL_SIZE=3
MAX_CODE_LENGTH=102400
QUERY_TIMEOUT=30000

# 其他配置
ENABLE_REQUEST_LOGGING=true
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000
API_PREFIX=/api
ENABLE_HELMET=true
TRUST_PROXY=false